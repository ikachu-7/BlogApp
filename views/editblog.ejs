<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>EditPage </title>
</head>
<body>
    <%- include('./partials/navbar') %>
     <form method="POST" action="/blog/edit/<%= id %>" enctype="multipart/form-data">
        <div class="container mt-3">
            <div class="mb-3">
                <label for="exampleInputtitle" class="form-label">Title:</label>
                <input type="text" name="title" class="form-control" id="exampleInputtitle">
            </div>
            <div class="mb-3">
                <label for="body" class="form-label">Body:</label>
                <textarea class="form-control" name="body" placeholder="write your blog" id="body"></textarea>   
            </div>
            <div class="mb-3">
                <label for="cover" class="form-label">Upload Image:</label>
                <input type="file" name="coverImageUrl" class="form-control" id="cover">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
     </form>  
    <%- include('./partials/script') %>
</body>
</html>